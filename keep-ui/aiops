# Map for WebSocket connection upgrade
map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

server {
    server_name aiops.decisionminds.com;

    # ---------- AUTH ENDPOINTS (Frontend/Next.js) ----------
    # Route auth endpoints to frontend as they're Next.js API routes
    location ~ ^/(auth|api/auth) {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Forward cookies and auth headers
        proxy_set_header Cookie $http_cookie;
        proxy_set_header Authorization $http_authorization;
        
        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # ---------- FRONTEND ----------
    location / {
        proxy_pass http://localhost:3000;   # Frontend running on port 3000
        proxy_http_version 1.1;
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Forward cookies and auth headers
        proxy_set_header Cookie $http_cookie;
        proxy_set_header Authorization $http_authorization;
        
        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }  

    # ---------- BACKEND ----------
    location /api/ {
        proxy_pass http://localhost:8080/;   # Backend running on port 8080
        proxy_http_version 1.1;
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Forward cookies and auth headers (CRITICAL for authentication)
        proxy_set_header Cookie $http_cookie;
        proxy_set_header Authorization $http_authorization;
        
        # Connection handling
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    location /backend/ {
        proxy_pass http://localhost:8080/;   # Backend running on port 8080 (trailing slash strips /backend/ prefix)
        proxy_http_version 1.1;
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Forward cookies and auth headers (CRITICAL for authentication)
        proxy_set_header Cookie $http_cookie;
        proxy_set_header Authorization $http_authorization;
        
        # Connection handling
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        # Timeouts (increased to prevent premature disconnects)
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Buffering
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
    }

    # OPTIONAL: Websocket support
    location /ws/ {
        proxy_pass http://localhost:8080;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/aiops.decisionminds.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/aiops.decisionminds.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = aiops.decisionminds.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name aiops.decisionminds.com;
    return 404; # managed by Certbot


}